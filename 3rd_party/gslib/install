#!/bin/bash
set -e

VER=1.0.8

if [ "$1" == "clean" ]; then
  rm -rf lib include 2>/dev/null
  find . -name '*.o' -exec rm {} +
  find . -name '*.a' -exec rm {} +
  exit 0
fi

if [ -f ./lib/libgs.a ]; then
  exit 0
fi

if [ ! -d ./gslib_v$VER ]; then
  rm -rf ./gslib* 2>/dev/null
  wget --no-check-certificate -O v$VER.tar.gz http://github.com/gslib/gslib/archive/v$VER.tar.gz
  mkdir gslib_v$VER
  tar -zxvf v$VER.tar.gz -C ./gslib_v$VER --strip-components=1
fi

cd gslib_v$VER
set -x
make -j4 $GSLIB_OPT
set +x
